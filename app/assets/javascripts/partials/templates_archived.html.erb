<div class="row" style="margin-top: 2em;">
  <div class="col-md-4 col-md-offset-4">
    <input class="typeahead col-md-12" type="text" placeholder="Search" ng-model="searchText" autofocus />
  </div>
</div>
<div class="row" style="margin-top: 2em;">
  <div class="col-md-10 col-md-offset-1">
    <div class="alert alert-danger" ng-show="error">
      <button type="button" class="close" ng-click="clearError()">&times;</button>{{error}}
    </div>

    <div class="row text-center" ng-hide="loaded" id="loading"><img src="<%= asset_path "ajax-loader.gif" %>"></div>
    <div id="templates">
        <div class="entry" ng-repeat="checklist in checklists | filter: {name: searchText}" ng-click="openChecklist(checklist.id)" ng-show="loaded">
            <div class="col-xs-9">
                <span class="name">{{ checklist.name }}</span>
            </div>
            <div class="col-xs-3">
                <span class="no-copy" ng-show="checklist.finished" style="color: #777;">Completed<br />{{ checklist.finished | date:'short' }}<br>
                    <span class="no-copy hint-text">Re-open this checklist</span>
                </span>
            </div>
            <br style="clear: both;">
        </div>
    </div>
