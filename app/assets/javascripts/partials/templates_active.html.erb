    <div id="templates">
        <div class="entry" ng-repeat="checklist in checklists" ckv-click="openChecklist(checklist.id)" ng-show="loaded">
            <div class="col-xs-9">
                <span class="name">{{ checklist.name }}</span>
            </div>
            <div class="col-xs-3 hint-text">
                <span class="template-actions" ng-show="user.is_admin || user.id == checklist.user_id">
                    <a class="glyphicon glyphicon-edit first" tooltip="Edit this checklist" stop-event="mouseup" href="#/checklists/{{checklist.id}}"></a>
                    <a class="glyphicon glyphicon-trash" tooltip="Delete this checklist" ng-click="confirmDeleteChecklist(checklist)" stop-event="mouseup"></a>
                </span><br>
            </div>
            <br style="clear: both;">
        </div>
    </div>
  </div>
