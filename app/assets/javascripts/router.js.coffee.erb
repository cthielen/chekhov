window.chekhovRouter = ($routeProvider) ->
  $routeProvider
    .when "/",
      templateUrl: '<%= asset_path("/assets/partials/templates_index.html") %>'
      controller: "TemplatesIndexCtrl"
    .when "/active",
      templateUrl: '<%= asset_path("/assets/partials/templates_active.html") %>'
      controller: "TemplatesActiveIndexCtrl"
    .when "/archived",
      templateUrl: '<%= asset_path("/assets/partials/templates_archived.html") %>'
      controller: "TemplatesArchivedIndexCtrl"
    .when "/templates/new",
      templateUrl: '<%= asset_path("/assets/partials/template_new.html") %>'
      controller: "TemplateNewCtrl"
    .when "/templates/edit/:id",
      templateUrl: '<%= asset_path("/assets/partials/template_edit.html") %>'
      controller: "TemplateEditCtrl"
    .when "/templates/duplicate/:id",
      templateUrl: '<%= asset_path("/assets/partials/template_new.html") %>'
      controller: "TemplateDuplicateCtrl"
    .when "/checklists/:id",
      templateUrl: '<%= asset_path("/assets/partials/checklist.html") %>'
      controller: "ChecklistCtrl"
    .otherwise redirectTo: "/"
